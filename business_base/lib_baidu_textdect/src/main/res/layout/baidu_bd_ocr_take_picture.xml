<com.baidu.ocr.ui.camera.OCRCameraLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:baidu_centerView="@+id/take_photo_button"
    app:baidu_contentView="@+id/camera_view"
    app:baidu_leftDownView="@+id/album_button"
    app:baidu_rightUpView="@+id/light_button">

    <com.baidu.ocr.ui.camera.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/album_button"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginStart="@dimen/baidu_camera_left_margin"
        android:layout_marginLeft="@dimen/baidu_camera_left_margin"
        android:layout_marginBottom="@dimen/baidu_camera_bottom_margin"
        android:padding="18dp"
        android:src="@drawable/baidu_bd_ocr_gallery" />

    <ImageView
        android:id="@+id/take_photo_button"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/baidu_bd_ocr_take_photo_selector"
        android:clickable="true" />

    <ImageView
        android:id="@+id/light_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/baidu_camera_top_margin"
        android:layout_marginEnd="@dimen/baidu_camera_right_margin"
        android:layout_marginRight="@dimen/baidu_camera_right_margin"
        android:clickable="true"
        android:padding="15dp"
        android:paddingBottom="3dp"
        android:src="@drawable/baidu_bd_ocr_light_off" />
</com.baidu.ocr.ui.camera.OCRCameraLayout>
