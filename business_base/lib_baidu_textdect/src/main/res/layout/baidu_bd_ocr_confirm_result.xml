<com.baidu.ocr.ui.camera.OCRCameraLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:baidu_contentView="@+id/display_image_view"
    app:baidu_leftDownView="@+id/cancel_button"
    app:baidu_rightUpView="@+id/confirm_button">

    <ImageView
        android:id="@+id/display_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/baidu_bd_ocr_id_card_locator_front" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/baidu_camera_left_margin"
        android:layout_marginLeft="@dimen/baidu_camera_left_margin"
        android:layout_marginBottom="@dimen/baidu_camera_bottom_margin"
        android:padding="12dp"
        android:src="@drawable/baidu_bd_ocr_cancel" />

    <ImageView
        android:id="@+id/confirm_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/baidu_camera_top_margin"
        android:layout_marginEnd="@dimen/baidu_camera_right_margin"
        android:layout_marginRight="@dimen/baidu_camera_right_margin"
        android:padding="12dp"
        android:src="@drawable/baidu_bd_ocr_confirm" />
</com.baidu.ocr.ui.camera.OCRCameraLayout>
